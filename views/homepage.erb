<!-- Homepage.erb -->
<div class="container-fluid">
  <div class="row welcome_blurb">
    By the people, for the people. Come find bars and restaurants that the whole town is buzzing about. The more people that agree with your post, the more trustworthy the user! Eat, recommend and repeat!
  </div>
</div>

<div class="col-md-12 top_ten">
  <div class="col-xs-2 col-s-3 col-md-6 topper_restaurant" style="float: left">
    TOP 10 RESTAURANTS
  </div>
  <div class="col-xs-2 col-s-3 col-md-6 topper_user" style="float: right">
    TOP 10 USERS
  </div>
  <br />
    <div class="">
        <div class="col-md-6">
          <% @sorted_restaurants.each do |rest| %>
              <div class="rest-list">
                <p><%= @rest_rank %>.  <%= rest.name %> </p>
                <p>Score: <%= rest.vote_amount %> </p>
                <hr>
              </div>
              <% @rest_rank += 1 %>
          <% end %>
          <!-- 1.<hr>
          2.<hr>
          3.<hr>
          4.<hr>
          5.<hr> -->
        </div>
        <div class="col-md-6">
          <% @sorted_users.each do |user| %>
              <div class="rest-list">
                <p><%= @user_rank %>.  <%= user.username %> </p>
                <p>Karma: <%= user.karma %> </p>
                <hr>
              </div>
            <% @user_rank += 1 %>
          <% end %>
        </div>
    </div>
</div>
